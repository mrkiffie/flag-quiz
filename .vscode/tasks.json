{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "silent",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "start",
			"args": ["run", "start"],
      "isBackground": true
		},
		{
			"taskName": "build",
			"args": ["run", "build"],
			"isBuildCommand": true
		},
		{
			"taskName": "deploy",
			"args": ["run", "deploy"]
		}
	]
}
